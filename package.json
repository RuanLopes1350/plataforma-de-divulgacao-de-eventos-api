{
  "author": "Eduado Tartas, Ruan Lopes, Jo√£o",
  "license": "MIT",
  "name": "eventos-api",
  "version": "1.0.0",
  "description": "eventos-api",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up --build",
    "dev:local": "nodemon --watch src --ignore node_modules --ignore logs src/app.js",
    "seed": "docker exec -it eventos-api node src/seeds/seeds.js",
    "seed:local": "node src/seeds/seeds.js",
    "test": "jest --coverage --detectOpenHandles",
    "start": "node server.js",
    "docker": "docker compose -f docker-compose.yml up --build -d"
  },
  "keywords": [],
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.2",
    "mongoose-paginate-v2": "^1.9.0",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.3",
    "primeiraapi": "file:",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@faker-js/faker": "^9.7.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.3.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "babel-plugin-transform-import-meta"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "node",
    "verbose": true,
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/utils/helpers/index.js",
      "/utils/logger.js"
    ]
  }
}
